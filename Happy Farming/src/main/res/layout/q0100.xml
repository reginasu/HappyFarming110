<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/p000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hf_back"
        android:orientation="vertical"
        android:padding="@dimen/p000">


        <WebView
            android:id="@+id/q0100_webview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/p150"
            android:layout_gravity="center|center_horizontal"
            android:background="@color/first_title" />



        <LinearLayout
            android:id="@+id/q0100_lay01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/p010">


            <Button
                android:id="@+id/b001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/h5000_1"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/q0100_lay03"
            android:layout_width="match_parent"
            android:layout_height="@dimen/p200"
            android:layout_marginTop="@dimen/p010"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/q0100_img002"
                android:layout_width="@dimen/p190"
                android:layout_height="match_parent"
                android:padding="@dimen/p005"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/img_game" />

            <ImageView
                android:id="@+id/q0100_img005"
                android:layout_width="@dimen/p190"
                android:layout_height="match_parent"
                android:padding="@dimen/p005"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/img_map" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/q0100_lay04"
            android:layout_width="match_parent"
            android:layout_height="@dimen/p200"
            android:layout_marginTop="@dimen/p000"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/q0100_img003"
                android:layout_width="@dimen/p190"
                android:layout_height="match_parent"
                android:padding="@dimen/p005"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/img_form" />

            <ImageView
                android:id="@+id/q0100_img004"
                android:layout_width="@dimen/p190"
                android:layout_height="match_parent"
                android:padding="@dimen/p005"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/img_book" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>